<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="14"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_visor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:padding="16dp"
        android:textSize="40sp"
        android:background="@color/greyMid"
        android:textColor="@color/white"
        android:text="0"
        android:layout_weight="4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:weightSum="4">

        <Button
            android:id="@+id/button_allDelete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/greyLight"
            android:textSize="25sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="C"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button_firstDelete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/greyLight"
            android:textSize="25sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="&lt;"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button_modulo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/orange"
            android:textSize="25sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="%"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button_div"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/orange"
            android:textSize="25sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="/"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:weightSum="4">

        <Button
            android:id="@+id/button_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/greyStrong"
            android:textSize="25sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="7"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/greyStrong"
            android:textSize="25sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="8"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/greyStrong"
            android:textSize="25sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="9"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button_multi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/orange"
            android:textSize="25sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="*"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:weightSum="4">

        <Button
            android:id="@+id/button_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/greyStrong"
            android:textSize="25sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="4"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/greyStrong"
            android:textSize="25sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="5"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/greyStrong"
            android:textSize="25sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="6"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button_sub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/orange"
            android:textSize="25sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="-"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:weightSum="4">

        <Button
            android:id="@+id/button_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/greyStrong"
            android:textSize="25sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="1"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/greyStrong"
            android:textSize="25sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="2"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/greyStrong"
            android:textSize="25sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="3"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button_addition"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/orange"
            android:textSize="25sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="+"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:weightSum="4.10">

        <Button
            android:id="@+id/button_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/greyStrong"
            android:textSize="25sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="0"
            android:layout_weight="2.10"/>

        <Button
            android:id="@+id/button_dot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/greyStrong"
            android:textSize="25sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="."
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button_equals"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/orange"
            android:textSize="25sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="="
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>